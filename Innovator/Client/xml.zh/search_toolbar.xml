<?xml version="1.0" encoding="utf-8"?>
<toolbarapplet buttonsize="26,25">
	<toolbar id="search">
		<button image="../images/ExecuteSearch.svg" id="search" tooltip="Run Search" text="Search"/>
		<button image="../images/ClearSearchCriteria.svg" id="newsearch" tooltip="Clear Search Criteria" text="Clear Criteria"/>
		<button disabled="true" image="../images/StopSearch.svg" id="stop_search" tooltip="Stop Search" text="Stop Search" />
		<separator/>
		<choice width="auto" id="search_mode" tooltip="Search modes" text="Search Mode">
		</choice>
		<choice id="saved_search" tooltip="Saved searches" text="Saved searches" label="Saved searches:" is="html">
		</choice>
		<separator/>
		<button image="../images/AddSearchCriteria.svg" id="add_criteria" tooltip="Add Criteria" text="Add Criteria" invisible="true" />
		<button image="../images/SelectAll.svg" id="select_all" tooltip="Select All" text="Select All"/>
		<edit id="page_size" tooltip="Page Size" text="" size="3"/>
		<button disabled="true" image="../images/PreviousPage.svg" id="prev_page" tooltip="Previous Page" text="Previous Page"/>
		<button disabled="true" image="../images/NextPage.svg" id="next_page" tooltip="Next Page" text="Next Page"/>
		<separator/>
		<edit id="max_search" tooltip="Max Results" text="" size="3"/>
		<separator/>
		<choice width="auto" disabled="false" id="query_type" tooltip="Query Type" text="Query Type">
			<choiceitem id="Current">Current</choiceitem>
			<choiceitem id="Latest">Latest</choiceitem>
			<choiceitem id="Released">Released</choiceitem>
			<choiceitem id="Effective">Effective</choiceitem>
		</choice>
		<date id="query_date_calendar" tooltip="Calendar" text="" disabled="true" size="12"/>
		<drop_down_selector id="preview__type" tooltip="Form Preview" text="Preview: " right="true">
			<checkitem id="Properties" checked="true">Properties</checkitem>
			<checkitem id="Form">Form</checkitem>
			<checkitem id="Off">Off</checkitem>
		</drop_down_selector>
		<button image="../images/SelectColumnsBlock.svg" id="select_columns_block" tooltip="Select Columns" text="Select Columns" right="true" state="false" />
	</toolbar>
</toolbarapplet>
