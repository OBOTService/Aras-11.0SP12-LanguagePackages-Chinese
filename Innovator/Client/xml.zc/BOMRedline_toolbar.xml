<?xml version="1.0" encoding="utf-8"?>
<toolbarapplet on_load="onToolbarLoad" on_click="onClickItem" on_change="onChoiceChanged" buttonstyle="windows" buttonsize="26,25">
	<toolbar id="swtoolbar">
		<button text="新增" id="add" image="../images/ExpandAll.svg" tooltip="新增一个物料到 BOM"/>
		<button text="删除 " id="delete" disabled="true" image="../images/Delete.svg" tooltip="Delete this Part from the BOM"/>
		<button text="变更 " id="change" disabled="true" image="../images/Copy.svg" tooltip="变更物料值"/>
		<button text="回复 " id="undo" disabled="true" image="../images/Rollback.svg" tooltip="回复红线注记"/>
		<separator/>
		<button text="现存 " id="view_existing" image="../images/ExistingView.svg" tooltip="检视现存的BOM"/>
		<button text="红线注记 " id="view_redline" image="../images/RedlineView.svg" tooltip="检视红线注记"/>
		<button text="计划 " id="view_proposed" image="../images/ProposedView.svg" tooltip="检视计划BOM"/>
		<separator/>
		<button text="储存" id="save" image="../images/Save.svg" tooltip="储存红线注记"/>
	</toolbar>
</toolbarapplet>
